<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/buttonsContainer">
        <ImageView
            android:id="@+id/playView"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/play_icon" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/pauseView"
            android:src="@drawable/pause_icon"/>
    </RelativeLayout>



    <TextView
        android:id="@+id/titlePlaylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/buttonsContainer"
        android:layout_marginLeft="10dp"
        android:text="Title"
        android:textSize="20sp" />

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/titlePlaylist"
    android:layout_toRightOf="@id/buttonsContainer"
    android:layout_alignParentBottom="true"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp">

    <ImageView
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:id="@+id/heartIcon"

        android:src="@drawable/heart_icon" />
    <TextView
        android:id="@+id/heartsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_toRightOf="@id/heartIcon"
        android:text="0"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/commentIcon"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_toRightOf="@id/heartsCount"
        android:layout_marginLeft="10dp"

        android:src="@drawable/comment_icon" />

    <TextView
        android:id="@+id/commentsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_toRightOf="@id/commentIcon"
        android:text="0"
        android:textSize="12sp" />
</RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/grey" />
</RelativeLayout>